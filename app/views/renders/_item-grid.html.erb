<div id="fh5co-product">
  <div class="container">
    <div class="row animate-box">
      <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
        <span>Latest</span>
        <h2>Sneakers</h2>
        <!-- <p>Here are the hottest and lastest releases.</p> -->
      </div>
    </div>

    <div class="row">
        <% @items.each do |item| %>
            <div class="col-md-4 text-center animate-box">
              <div class="product">
                <div class="product-grid" style="background: url(<%= asset_path item.image_url %>) no-repeat; background-size: cover;">
                  <div class="inner">
                    <p>
                      <a href= <%= add_to_cart_path(item.id) %> class="icon"><i class="fas fa-shopping-cart"></i></a>
                      <a href=<%= single_path(item.id) %> class="icon"><i class="fas fa-eye"></i></i></a>
                    </p>
                  </div>
                </div>
                <div class="desc">
                  <h3><a href=<%= single_path(item.id) %>><%= item.title %></a></h3>
                  <span class="price"><%= item.price %>$</span>
                </div>
              </div>
            </div>
        <% end %>
    </div>

</div>
